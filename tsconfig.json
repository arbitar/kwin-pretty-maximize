{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES5", "ES2015", "ES2016", "ES2017", "DOM"],
    "module": "ES6",
    "moduleResolution": "node",
    "types": ["kwin-types"],
    "outDir": "./contents/code/",
    "removeComments": true,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
